# Boxed Koji Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_DB=koji
POSTGRES_USER=koji
POSTGRES_PASSWORD=koji_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

KEYTAB_SERVICE=http://keytabs.koji.box:5000

# Koji Hub Configuration
KOJI_HUB_URL=http://koji.box/kojihub

# Koji Web Configuration
KOJI_WEB_URL=http://koji.box/

# Storage Configuration
KOJI_TOP_URL=http://koji.box/kojifiles
KOJI_TOP_DIR=/mnt/koji

# Network Configuration
KOJI_NETWORK=koji-network
KOJI_SUBNET=172.20.0.0/16

# Build Configuration
KOJI_GIT_REPO=https://pagure.io/koji.git
KOJI_BRANCH=main
BUILD_ARCH=x86_64

# Resource Limits
POSTGRES_MEMORY_LIMIT=1g
HUB_MEMORY_LIMIT=512m
WORKER_MEMORY_LIMIT=1g
WEB_MEMORY_LIMIT=256m

# Kerberos Configuration
KRB5_REALM=KOJI.BOX
KRB5_KDC=kdc.koji.box
KRB5_ADMIN_SERVER=kdc.koji.box

# The end.
